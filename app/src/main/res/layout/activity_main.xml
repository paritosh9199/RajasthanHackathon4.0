<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context="com.hackathon.rajasthon.stockzhackzz.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="06dp"
        android:layout_weight="1"
        android:background="#0d104d"
        android:text="Graph" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="6dp"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:text="Check your Stock Value"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#747474" />

            <TextView
                android:layout_width="0dp"
                android:text="Stock predictor"
                android:layout_marginLeft="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:id="@+id/v_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF747474"
            android:layout_alignBottom="@id/ll_1" />

        <LinearLayout
            android:id="@+id/ll_2"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/v_1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#FF747474" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
